{% set sidebar_bg_hor_pos = options.sidebar_bg_image['bg_horizontal_position'] == 'custom' ? options.sidebar_bg_image['custom_bg_horizontal_position'] : options.sidebar_bg_image['bg_horizontal_position'] ? options.sidebar_bg_image['bg_horizontal_position'] %}
{% set sidebar_bg_ver_pos = options.sidebar_bg_image['bg_vertical_position'] == 'custom' ? options.sidebar_bg_image['custom_bg_vertical_position'] : options.sidebar_bg_image['bg_vertical_position'] ? options.sidebar_bg_image['bg_vertical_position'] %}
