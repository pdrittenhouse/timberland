{% set sidebar_page_bg_ver_pos = (post.meta('sidebar_bg_image')['bg_image_type'] == 'file' and post.meta('sidebar_bg_image')['bg_image']['url']) or (post.meta('sidebar_bg_image')['bg_image_type'] == 'url' and post.meta('sidebar_bg_image')['bg_image_url']) ? sidebar_post_bg_ver_pos : (options.sidebar_bg_image['bg_image_type'] == 'file' and options.sidebar_bg_image['bg_image']['url']) or (options.sidebar_bg_image['bg_image_type'] == 'url' and options.sidebar_bg_image['bg_image_url']) ? sidebar_bg_ver_pos %}
{% set sidebar_page_bg_position = sidebar_page_bg_hor_pos or sidebar_page_bg_ver_pos ? 'background-position: ' ~ sidebar_page_bg_hor_pos ~ ' ' ~ sidebar_page_bg_ver_pos ~ ';' %}
{% set sidebar_page_bg_repeat = (post.meta('sidebar_bg_image')['bg_image_type'] == 'file' and post.meta('sidebar_bg_image')['bg_image']['url']) or (post.meta('sidebar_bg_image')['bg_image_type'] == 'url' and post.meta('sidebar_bg_image')['bg_image_url']) ? sidebar_post_bg_repeat : (options.sidebar_bg_image['bg_image_type'] == 'file' and options.sidebar_bg_image['bg_image']['url']) or (options.sidebar_bg_image['bg_image_type'] == 'url' and options.sidebar_bg_image['bg_image_url']) ? sidebar_bg_repeat %}
