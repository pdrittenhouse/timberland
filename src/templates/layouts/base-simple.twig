{% set sidebar_post_bg_image_size = post.meta('sidebar_bg_image')['bg_size'] == 'custom' ? 'background-size: ' ~ post.meta('sidebar_bg_image')['custom_bg_size'] ~ ';' : post.meta('sidebar_bg_image')['bg_size'] ? 'background-size: ' ~ post.meta('sidebar_bg_image')['bg_size'] ~ ';' %}
{% set sidebar_post_bg_hor_pos = post.meta('sidebar_bg_image')['bg_horizontal_position'] == 'custom' ? post.meta('sidebar_bg_image')['custom_bg_horizontal_position'] : post.meta('sidebar_bg_image')['bg_horizontal_position'] ? post.meta('sidebar_bg_image')['bg_horizontal_position'] %}
{% set sidebar_post_bg_ver_pos = post.meta('sidebar_bg_image')['bg_vertical_position'] == 'custom' ? post.meta('sidebar_bg_image')['custom_bg_vertical_position'] : post.meta('sidebar_bg_image')['bg_vertical_position'] ? post.meta('sidebar_bg_image')['bg_vertical_position'] %}
{% set sidebar_post_bg_repeat = post.meta('sidebar_bg_image')['bg_repeat'] ? 'background-repeat: ' ~ post.meta('sidebar_bg_image')['bg_repeat'] ~ ';' %}
{% set sidebar_post_bg_attachment = post.meta('sidebar_bg_image')['bg_attachment'] ? 'background-attachment: ' ~ post.meta('sidebar_bg_image')['bg_attachment'] ~ ';' %}

{# Sidebar background image styles #}
{% set sidebar_page_bg_image = (post.meta('sidebar_bg_image')['bg_image_type'] == 'file' and post.meta('sidebar_bg_image')['bg_image']['url']) or (post.meta('sidebar_bg_image')['bg_image_type'] == 'url' and post.meta('sidebar_bg_image')['bg_image_url']) ? sidebar_post_bg_image :  (options.sidebar_bg_image['bg_image_type'] == 'file' and options.sidebar_bg_image['bg_image']['url']) or (options.sidebar_bg_image['bg_image_type'] == 'url' and options.sidebar_bg_image['bg_image_url']) ? sidebar_bg_image %}
{% set sidebar_page_bg_image_size = (post.meta('sidebar_bg_image')['bg_image_type'] == 'file' and post.meta('sidebar_bg_image')['bg_image']['url']) or (post.meta('sidebar_bg_image')['bg_image_type'] == 'url' and post.meta('sidebar_bg_image')['bg_image_url']) ? sidebar_post_bg_image_size : (options.sidebar_bg_image['bg_image_type'] == 'file' and options.sidebar_bg_image['bg_image']['url']) or (options.sidebar_bg_image['bg_image_type'] == 'url' and options.sidebar_bg_image['bg_image_url']) ? sidebar_bg_image_size %}
