{% set page_bg_hor_pos = (post.meta('bg_image')['bg_image_type'] == 'file' and post.meta('bg_image')['bg_image']['url']) or (post.meta('bg_image')['bg_image_type'] == 'url' and post.meta('bg_image')['bg_image_url']) ? post_bg_hor_pos : (options.bg_image['bg_image_type'] == 'file' and options.bg_image['bg_image']['url']) or (options.bg_image['bg_image_type'] == 'url' and options.bg_image['bg_image_url']) ? bg_hor_pos %}
{% set page_bg_ver_pos = (post.meta('bg_image')['bg_image_type'] == 'file' and post.meta('bg_image')['bg_image']['url']) or (post.meta('bg_image')['bg_image_type'] == 'url' and post.meta('bg_image')['bg_image_url']) ? post_bg_ver_pos : (options.bg_image['bg_image_type'] == 'file' and options.bg_image['bg_image']['url']) or (options.bg_image['bg_image_type'] == 'url' and options.bg_image['bg_image_url']) ? bg_ver_pos %}
{% set page_bg_position = page_bg_hor_pos or page_bg_ver_pos ? 'background-position: ' ~ page_bg_hor_pos ~ ' ' ~ page_bg_ver_pos ~ ';' %}
{% set page_bg_repeat = (post.meta('bg_image')['bg_image_type'] == 'file' and post.meta('bg_image')['bg_image']['url']) or (post.meta('bg_image')['bg_image_type'] == 'url' and post.meta('bg_image')['bg_image_url']) ? post_bg_repeat : (options.bg_image['bg_image_type'] == 'file' and options.bg_image['bg_image']['url']) or (options.bg_image['bg_image_type'] == 'url' and options.bg_image['bg_image_url']) ? bg_repeat %}
{% set page_bg_attachment = (post.meta('bg_image')['bg_image_type'] == 'file' and post.meta('bg_image')['bg_image']['url']) or (post.meta('bg_image')['bg_image_type'] == 'url' and post.meta('bg_image')['bg_image_url']) ? post_bg_attachment : (options.bg_image['bg_image_type'] == 'file' and options.bg_image['bg_image']['url']) or (options.bg_image['bg_image_type'] == 'url' and options.bg_image['bg_image_url']) ? bg_attachment %}

{# Sidebar global background image styles #}
{% set sidebar_bg_image = options.sidebar_bg_image['bg_image_type'] == 'file' and options.sidebar_bg_image['bg_image']['url'] ? "background-image: url('" ~ options.sidebar_bg_image['bg_image']['url'] ~ "');" : options.sidebar_bg_image['bg_image_type'] == 'url' and options.sidebar_bg_image['bg_image_url'] ? "background-image: url('" ~ options.sidebar_bg_image['bg_image_url'] ~ "');" %}
