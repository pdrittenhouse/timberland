<div class="primary-image-demo m-3">
  <h2 class="mb-3">Placeholder Image</h2>
  {% include "@atoms/image/_image.tpl.twig" with {
    variant: 'primary',
    src: '',
    alt: '',
    placeholder: true,
    width: 600,
    height: 250,
    background_color: 'ff000',
    text_color: 'fff',
    format: 'jpg',
    text: 'This is an image placeholder'
  } %}
</div>

<div class="primary-image-demo m-3">
  <h2 class="mb-3">Primary Image</h2>
  {% include "@atoms/image/_image.tpl.twig" with {
    variant: 'primary',
    placeholder: true,
    image_classes: ['d-inline', 'm-1']
  } %}
</div>

<div class="picture-image-demo m-3">
  <h2>Picture with Multiple Sources</h2>
  <div>
    {% include '@atoms/image/_image.tpl.twig' with {
      variant: 'picture',
      breakpoints: scssBreakpoints,
      src: 'https://via.placeholder.com/500',
      alt: 'A graybox image',
      srcset: ['https://via.placeholder.com/100', 'https://via.placeholder.com/200', 'https://via.placeholder.com/400'],
      placeholder: false
    } %}
  </div>
</div>

<div class="aspect-ratio-image-demo m-3">
  <h2>Image with set aspect ratio <br><small>These span full width and may need a containing element.</small></h2>
  <div>
    {% include "@atoms/image/_image.tpl.twig" with {
      variant: 'aspect-ratio',
      src: 'https://via.placeholder.com/100x100',
      alt: 'A 1x1 image',
      style: '',
      placeholder: false,
      width: 1,
      height: 1
      } %}
  </div>
  <div>
    {% include "@atoms/image/_image.tpl.twig" with {
      variant: 'aspect-ratio',
      src: 'https://via.placeholder.com/300x200',
      alt: 'A 3x2 image',
      style: '',
      placeholder: false,
      width: '3',
      height: '2'
      } %}
  </div>
  <div>
    {% include "@atoms/image/_image.tpl.twig" with {
      variant: 'aspect-ratio',
      src: 'https://via.placeholder.com/1600x900',
      alt: 'A 16x9 image',
      style: '',
      placeholder: false,
      width: '16',
      height: '9'
      } %}
  </div>
  <div>
    {% include "@atoms/image/_image.tpl.twig" with {
      variant: 'aspect-ratio',
      src: 'https://via.placeholder.com/2100x900',
      alt: 'A 21x9 image',
      style: '',
      placeholder: false,
      width: '21',
      height: '9'
      } %}
  </div>
</div>

<div class="background-image-demo container">
  <h2>Background Images</h2>
  <div class="row">
    <div class="col-lg-6">
      <h3>SVG</h3>
      {% include '@atoms/image/_image.tpl.twig' with {
        variant: 'bg',
        src: paths.images ~ '/logo.svg',
        alt: 'beaconfire RED',
        width: '100',
        height: '250px'
      } %}
    </div>
    <div class="col-lg-6">
      <h3>PNG</h3>
      {% include '@atoms/image/_image.tpl.twig' with {
        variant: 'bg',
        src: paths.images ~ '/logo.png',
        alt: 'beaconfire RED',
        width: '100',
        height: '250px'
      } %}
    </div>
  </div>
</div>
