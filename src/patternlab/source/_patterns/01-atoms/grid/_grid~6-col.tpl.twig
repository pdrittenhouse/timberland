{#
/**
 * @file
 * grid
 *
 * Available variables:
 *  - Inherit variables from @atoms/image/_image.tpl.twig
 *  - grid_classes [array]: Grid component classes.
 *  - grid_other_classes [string]: Grid component class.
 *
 */
#}

{#
NOTE: If this row is the very outer wrapper of a page, it *must* be wrapped
in a .container div. We leave this up to the implementor manually for flexibility.
#}

{% set grid_classes = grid_classes|default([])|merge([
  'grid',
  'grid-6-col',
  container ? 'container' : (container_fluid ? 'container-fluid'),
  grid_other_classes,
]) | sort | join(' ') | trim %}

<div class="{{ grid_classes }}">
  <div class="row">
    <div class="col-md-6 col-lg-3 col-xl-2 col-first">
      {% block column_1 %}
        <span>Column 1/6</span>
      {% endblock column_1 %}
    </div>

    <div class="col-md-6 col-lg-3 col-xl-2 col-second">
      {% block column_2 %}
        <span>Column 2/6</span>
      {% endblock column_2 %}
    </div>

    <div class="col-md-6 col-lg-3 col-xl-2 col-third">
      {% block column_3 %}
        <span>Column 3/6</span>
      {% endblock column_3 %}
    </div>

    <div class="col-md-6 col-lg-3 col-xl-2 col-fourth">
      {% block column_4 %}
        <span>Column 4/6</span>
      {% endblock column_4 %}
    </div>

    <div class="col-md-6 col-lg-3 col-xl-2 col-fifth">
      {% block column_5 %}
        <span>Column 5/6</span>
      {% endblock column_5 %}
    </div>

    <div class="col-md-6 col-lg-3 col-xl-2 col-sixth">
      {% block column_6 %}
        <span>Column 6/6</span>
      {% endblock column_6 %}
    </div>
  </div>
</div>
